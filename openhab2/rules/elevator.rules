        var String results = ""
        logInfo("startupRule", "Before")
        results = executeCommandLine("source /home/openhabian/Elevator-AI/on_startup/virtualEnvActivate.sh", 5000)
        logInfo("startupRule", "Results are: " + results)
    ])
end

